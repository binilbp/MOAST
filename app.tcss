Screen {
	align: center top;
	background: $background-darken-1;
}


NameContainer {
	margin-top: 2;
	padding: 0 4;
	/*background: $secondary-background-darken-1;*/
	height: auto;
	width: 100%;
}

#ascii {
	height: 3;
	color: $primary;
}

Body {
	margin-top: 1;
	padding: 2 3;
	height: 1fr;
}

#userprompt {
	border: round $primary;
	border-title-align: right;
	border-title-color: $warning;
	background: $background-darken-1;
}

#sent-msg {
	margin: 1;
	color: $success;
	opacity: 100%;
	width: 100%;
	content-align-horizontal: center;
	padding: 1 0;
}

#terminaldisplay {
	padding: 1 2;
	margin: 2 0;
	width: 100%;
	border: round $accent-darken-2;
	border-title-align: right;
	border-title-color: $warning;
	content_align-vertical: top;
	background: $background-darken-1;
}

ExecutionBox {
	width: 100%;
	max-height: 3;
	/*background: $primary;*/
	align: right top;

}

Button {
	margin: 0 1;
}
